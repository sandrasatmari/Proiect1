@page
@model Proiect1.Pages.Zboruri.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Zbor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zbor.DataPlecare" class="control-label"></label>
                <input asp-for="Zbor.DataPlecare" class="form-control" />
                <span asp-validation-for="Zbor.DataPlecare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.NrLocuri" class="control-label"></label>
                <input asp-for="Zbor.NrLocuri" class="form-control" />
                <span asp-validation-for="Zbor.NrLocuri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.NrLocuriRezervate" class="control-label"></label>
                <input asp-for="Zbor.NrLocuriRezervate" class="form-control" />
                <span asp-validation-for="Zbor.NrLocuriRezervate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.Poarta" class="control-label"></label>
                <input asp-for="Zbor.Poarta" class="form-control" />
                <span asp-validation-for="Zbor.Poarta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.OreIntarziere" class="control-label"></label>
                <input asp-for="Zbor.OreIntarziere" class="form-control" />
                <span asp-validation-for="Zbor.OreIntarziere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zbor.Destinatie" class="control-label">Aeroport Destinatie</label>
                <select asp-for="Zbor.Destinatie" class="form-control" asp-items="ViewBag.Destinatie">
                </select>
                <span asp-validation-for="Zbor.Destinatie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var comp in Model.AssignedAirlineDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                        @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedAirlines"
                                               value="@comp.CompanieAerianaID"
                                               @(Html.Raw(comp.Assigned ?"checked=\"checked\"" : "")) />
                                        @comp.CompanieAerianaID @: @comp.AirlineName
                                    @:</td>
                                }
                        @:</tr>
                            }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
